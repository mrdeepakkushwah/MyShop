{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    {
      "src": "/assets/(.*)",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/storybook",
      "status": 308,
      "headers": {
        "Location": "https://your-storybook-url.com"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
